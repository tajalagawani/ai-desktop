# ACT Signature File - Example
# This file stores authenticated nodes and their configurations
# Actual tokens are stored in .env and referenced as {{.env.VARIABLE}}

[signature]
version = "1.0.0"
user_id = "example-user"
created_at = "2025-01-22T10:00:00Z"
updated_at = "2025-01-22T10:00:00Z"

[metadata]
authenticated_nodes = 2
unauthenticated_nodes = 0

# GitHub Node Example
[node:github]
type = "github"
enabled = true
authenticated = true
auth_configured_at = "2025-01-22T10:00:00Z"

[node:github.auth]
access_token = "{{.env.GITHUB_ACCESS_TOKEN}}"

[node:github.defaults]
owner = "myusername"
repo = "myrepo"
per_page = 30

[node:github.operations]
list_issues = {description = "List repository issues", required_params = ["owner", "repo"]}
create_issue = {description = "Create a new issue", required_params = ["owner", "repo", "title"]}
get_issue = {description = "Get a specific issue", required_params = ["owner", "repo", "issue_number"]}
list_pull_requests = {description = "List pull requests", required_params = ["owner", "repo"]}

[node:github.metadata]
display_name = "GitHub"
category = "developer"
description = "GitHub API integration"
vendor = "github"
version = "1.0.0"

# OpenAI Node Example
[node:openai]
type = "openai"
enabled = true
authenticated = true
auth_configured_at = "2025-01-22T10:05:00Z"

[node:openai.auth]
api_key = "{{.env.OPENAI_API_KEY}}"

[node:openai.defaults]
model = "gpt-4"
temperature = 0.7
max_tokens = 1000

[node:openai.operations]
create_completion = {description = "Create a completion", required_params = ["prompt"]}
create_chat_completion = {description = "Create a chat completion", required_params = ["messages"]}
list_models = {description = "List available models", required_params = []}

[node:openai.metadata]
display_name = "OpenAI"
category = "ai"
description = "OpenAI API integration"
vendor = "openai"
version = "1.0.0"
