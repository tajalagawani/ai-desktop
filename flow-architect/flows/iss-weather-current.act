import requests
import json

# Get ISS current location
iss_response = requests.get('http://api.open-notify.org/iss-now.json')
iss_data = iss_response.json()

lat = float(iss_data['iss_position']['latitude'])
lon = float(iss_data['iss_position']['longitude'])

# Get weather at ISS location
weather_response = requests.get(f'https://api.open-meteo.com/v1/forecast?latitude={lat}&longitude={lon}&current_weather=true')
weather_data = weather_response.json()

