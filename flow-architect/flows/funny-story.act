[workflow]
name = "Funny Story Generator"
description = "Generate a hilarious story using OpenAI"
start_node = StoryGenerator

[node:StoryGenerator]
type = "openai"
label = "Generate funny story with OpenAI"
model = "gpt-4"
temperature = 0.9
max_tokens = 500
messages = [
  {
    "role": "system",
    "content": "You are a creative comedy writer who writes hilarious, absurd short stories with unexpected plot twists."
  },
  {
    "role": "user",
    "content": "Write me a funny short story (around 200-300 words) about something completely ridiculous and unexpected. Make it genuinely hilarious with a great punchline at the end."
  }
]

[env]
OPENAI_API_KEY
