# ========================================
# AI Desktop Environment Configuration
# ========================================

# -----------------
# App Configuration
# -----------------
NODE_ENV=production
PORT=3005

# Public URL (used for redirects, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3005
NEXT_PUBLIC_APP_NAME="AI Desktop"

# -----------------
# Security
# -----------------
# Session secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-very-long-and-secure-secret-key-min-32-characters

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3005,http://localhost:80

# -----------------
# AI Services (Optional)
# -----------------
# Anthropic API key for Claude integration
ANTHROPIC_API_KEY=

# Use Claude CLI authentication instead of API key
USE_CLAUDE_CLI_AUTH=false

# -----------------
# Flow Builder Configuration
# -----------------
# ACT Integration Paths
# Local Mac:  AGENT_SDK_PATH=/Users/tajnoah/act/agent-sdk
# VPS:        AGENT_SDK_PATH=/var/www/act/agent-sdk
AGENT_SDK_PATH=

# Optional: Path to ACT root directory (auto-detected from AGENT_SDK_PATH if not set)
# Local Mac:  ACT_ROOT=/Users/tajnoah/act
# VPS:        ACT_ROOT=/var/www/act
ACT_ROOT=

# Anthropic API Key for Flow Builder (can reuse ANTHROPIC_API_KEY above)
# For security, set server-side only in production (remove NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_ANTHROPIC_API_KEY=

# Default Claude model for flow generation
# Options: claude-sonnet-4-20250514, claude-opus-4-20250514, claude-3-5-sonnet-20241022
NEXT_PUBLIC_FLOW_BUILDER_MODEL=claude-sonnet-4-20250514

# Default user ID for session tracking (multi-user support coming soon)
NEXT_PUBLIC_FLOW_BUILDER_USER_ID=default-user

# Enable debug logging in Flow Builder
NEXT_PUBLIC_FLOW_BUILDER_DEBUG=true

# Enable verbose agent output
NEXT_PUBLIC_FLOW_BUILDER_VERBOSE=true

# -----------------
# Database (Optional)
# -----------------
# PostgreSQL/Neon database URL
DATABASE_URL=

# -----------------
# Monitoring & Analytics (Optional)
# -----------------
# Sentry DSN for error tracking
SENTRY_DSN=

# Analytics tracking ID
ANALYTICS_ID=

# -----------------
# Feature Flags
# -----------------
# Enable/disable specific features
ENABLE_TWO_FACTOR=true
ENABLE_WORKFLOWS=true
ENABLE_TERMINAL=true

# -----------------
# Rate Limiting
# -----------------
# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Max requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# -----------------
# File Manager
# -----------------
# Root directory for file manager (VPS default: /var/www)
FILE_MANAGER_ROOT=/var/www

# Show hidden files by default (files starting with .)
SHOW_HIDDEN_FILES=false

# -----------------
# File Upload
# -----------------
# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Maximum total upload size (default: 50MB)
MAX_UPLOAD_SIZE=52428800

# -----------------
# WebSocket Configuration
# -----------------
# WebSocket ping interval in ms (default: 30000 = 30 seconds)
WS_PING_INTERVAL=30000

# WebSocket connection timeout in ms (default: 60000 = 1 minute)
WS_TIMEOUT=60000

# -----------------
# Logging
# -----------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable structured logging (JSON format)
STRUCTURED_LOGS=true

# -----------------
# Development Only
# -----------------
# Skip TypeScript type checking in development
SKIP_TYPE_CHECK=false

# Disable linting during build
DISABLE_ESLINT=false

# Enable verbose logging
VERBOSE=false
