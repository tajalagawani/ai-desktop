[workflow]
name = "Hello World Joke Generator"
description = "A simple workflow that generates a hello world joke using OpenAI"
start_node = "GenerateJoke"

[parameters]
# Simple parameters for the joke generation
joke_style = "programming"
max_length = 100

[node:GenerateJoke]
type = "openai"
operation = "chat_completion"
label = "Generate a hello world programming joke"
model = "gpt-3.5-turbo"
temperature = 0.8
max_tokens = 150
messages = [
  {
    "role" = "system",
    "content" = "You are a witty programmer who creates funny, clean jokes about programming and 'Hello World' programs. Keep jokes short and family-friendly."
  },
  {
    "role" = "user",
    "content" = "Generate a funny {{.Parameter.joke_style}} joke about 'Hello World' programs. Keep it under {{.Parameter.max_length}} characters and make it clever but accessible."
  }
]

[edges]
# No additional edges needed for this simple workflow

[configuration]
# Basic configuration
timeout = 30
retry_count = 2

[settings]
# Workflow settings
log_level = "info"
enable_metrics = true

# Note: This workflow requires OpenAI authentication
# Run: act auth add openai --api-key YOUR_API_KEY