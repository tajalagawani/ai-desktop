# =============================================================================
# AI Desktop Backend - VPS Production Environment
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER
# -----------------------------------------------------------------------------
PORT=3006
NODE_ENV=production

# Frontend URL
CLIENT_URL=http://YOUR_VPS_IP

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://YOUR_VPS_IP,http://YOUR_VPS_IP:80

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# FILE MANAGER
# -----------------------------------------------------------------------------
FILE_MANAGER_ROOT=/var/www
SHOW_HIDDEN_FILES=false

# -----------------------------------------------------------------------------
# DATA STORAGE
# -----------------------------------------------------------------------------
DATA_DIR=./data
